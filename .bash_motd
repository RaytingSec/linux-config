#!/bin/bash

# Greeting
hour=$(date +%k)
if [[ $hour -lt 6 ]]; then
  greet=("Greetings, friend of the night")
elif [[ $hour -lt 12 ]]; then
  greet=("Good morning"
         "Top of the morning to you")
elif [[ $hour -lt 19 ]]; then
  greet=("Good afternoon")
else
  greet=("Good evening")
fi
greet+=("Hello"
        "Yip hi :3")
index=$[$RANDOM % ${#greet[@]}]
greeting=${greet[$index]}

# MOTD
name=$(getent passwd $USER | cut -d ':' -f 5)
name=${name//','}

motd_long="$greeting, $name.\n
\n
Today's $(date +"%A"),\n
$(date +"%F %T %z (%Z)")\n
\n
$(hostname): up $(uptime | cut -d 'p' -f 2)\n
"
motd_short="$greeting, $name.\n
\n
$(hostname): up $(uptime | cut -d 'p' -f 2)\n
"

(echo -e $motd_short; fortune -c -e debian debian-hints linux linuxcookie computers miscellaneous hugs) | cowsay -nf rayting
# | lolcat -p 9 -F .3
printf "\n"
